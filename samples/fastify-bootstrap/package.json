{
  "name": "fastify-bootstrap",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nest build",
    "dev": "nest start -b swc -w",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "migration:create": "mikro-orm migration:create",
    "migration:down": "mikro-orm migration:down",
    "migration:fresh": "mikro-orm migration:fresh",
    "migration:list": "mikro-orm migration:list",
    "migration:pending": "mikro-orm migration:pending",
    "migration:up": "mikro-orm migration:up",
    "start": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./tests/e2e/jest.config.json",
    "test:email": "node scripts/test-email.js",
    "test:integration": "jest --config ./tests/integration/jest.config.json",
    "test:unit": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@hl8/adapter": "workspace:*",
    "@hl8/bootstrap": "workspace:*",
    "@hl8/config": "workspace:*",
    "@hl8/redis": "workspace:*",
    "@hl8/utils": "workspace:*",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/platform-fastify": "^11.1.9",
    "fastify": "^5.6.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/testing": "^11.1.9",
    "@repo/constants": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.2",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "class-validator": "0.14.2",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}