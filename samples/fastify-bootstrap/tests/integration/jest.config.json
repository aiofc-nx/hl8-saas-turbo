{
  "displayName": "fastify-api-integration",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../..",
  "testMatch": ["<rootDir>/tests/integration/**/*.spec.ts"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@repo/constants/app$": "<rootDir>/../../../packages/constants/app.ts"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts"
  ],
  "coverageDirectory": "<rootDir>/../../../coverage/apps/fastify-api/integration",
  "testTimeout": 10000,
  "setupFilesAfterEnv": ["<rootDir>/tests/integration/setup.ts"]
}

